<% if current_user == user %>
<% elsif current_user.is_friend?(user)%>
  <button type="button" class="btn btn-default pull-right" disabled="disabled">My Friend</button>
<% elsif current_user.is_ignore?(user)%>
  <button type="button" class="btn btn-default pull-right" disabled="disabled">Ignored Invitation</button>
<% elsif current_user.is_invited?(user)%>
  <%= link_to 'Accept', accept_user_path(user), method: :post, class: 'btn btn-primary pull-right' %>
  <%= link_to 'Ignore', ignore_user_path(user), method: :post, class: 'btn btn-warning pull-right' %>
<% elsif current_user.is_inviting?(user)%>
  <button type="button" class="btn btn-default pull-right" disabled="disabled">Inviting</button>
<% else %>
  <%= link_to "Add Friend", invite_user_path(user), method: :post, class: "btn btn-default pull-right" %>
<% end %>