<table class="table">
  <thead>
    <tr>
      <th class="col-md-2"><%= sort_link @q, :replies_count,'Replied Count' %></th>
      <th class="col-md-6"><%= sort_link @q, :title,'Title' %></th>
      <th class="col-md-2"><%= sort_link @q, :replied_at,'Last Replied at' %></th>
      <th class="col-md-2"><%= sort_link @q, :viewed_at,'View Count' %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <% if post.is_viewable?(current_user) %>
        <tr>
          <td>
            <%= post.replies_count %>
          </td>
          <td>
            <%= link_to "#{post.title}", post_path(post) %>
            <%= post.privacy %>
          </td>
          <td>
            <%= post.replied_at.strftime("%F %T") if post.replies.present?  %>
          </td>
          <td>
            <%= post.viewed_count %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>