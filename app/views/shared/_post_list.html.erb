<table class="table">
  <thead>
    <tr>
      <th class="col-md-2">Replied Count</th>
      <th class="col-md-6">Title</th>
      <th class="col-md-2">Last Replied at</th>
      <th class="col-md-2">View Count</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          yet
        </td>
        <td>
          <%= link_to "#{post.title}", post_path(post) %>
        </td>
        <td>
          <% post.categories.each do |category| %>
            <%= category.name %>
          <% end %>
        </td>
        <td>
          yet
        </td>
      </tr>
    <% end %>
  </tbody>
</table>